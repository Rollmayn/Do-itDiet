<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage"
    android:orientation="vertical"
    android:id="@+id/drawer_layout">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/staticBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/menubutton" />

            <TextView
                android:id="@+id/homeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-smallcaps"
                android:includeFontPadding="false"
                android:text="Home"
                android:textSize="35dp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATE"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="17dp"
                        android:textStyle="bold"/>


                </RelativeLayout>

                <TextView
                    android:id="@+id/recTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended Articles"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#b5fff1">

                    <LinearLayout
                        android:id="@+id/article1"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:background="#45CBB2"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carrot only diet"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_margin="5dp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@mipmap/articleplaceholder"
                            android:scaleType="centerCrop"
                            android:onClick="openWeb"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="He who eats the carrot aquires glasses with
                            the same colour as the carrots. Orange"
                            android:textSize="12dp"/>

                        <RatingBar
                            style="@android:style/Widget.Holo.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="5" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/article2"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:background="#45CBB2"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="35dp"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/article1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carrot only diet"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_margin="5dp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@mipmap/articleplaceholder"
                            android:scaleType="centerCrop"
                            android:onClick="openWeb"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="He who eats the carrot aquires glasses with
                            the same colour as the carrots. Orange"
                            android:textSize="12dp"/>

                        <RatingBar
                            style="@android:style/Widget.Holo.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="5" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#b5fff1">

                    <LinearLayout
                        android:id="@+id/article3"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:background="#45CBB2"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carrot only diet"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_margin="5dp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@mipmap/articleplaceholder"
                            android:scaleType="centerCrop"
                            android:onClick="openWeb"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="He who eats the carrot aquires glasses with
                            the same colour as the carrots. Orange"
                            android:textSize="12dp"/>

                        <RatingBar
                            style="@android:style/Widget.Holo.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="5" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/article4"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:background="#45CBB2"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="35dp"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/article3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carrot only diet"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_margin="5dp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@mipmap/articleplaceholder"
                            android:scaleType="centerCrop"
                            android:onClick="openWeb"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="He who eats the carrot aquires glasses with
                            the same colour as the carrots. Orange"
                            android:textSize="12dp"/>

                        <RatingBar
                            style="@android:style/Widget.Holo.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="5" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#b5fff1"
                    android:layout_marginBottom="30dp">

                    <LinearLayout
                        android:id="@+id/article5"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:background="#45CBB2"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carrot only diet"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_margin="5dp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@mipmap/articleplaceholder"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="He who eats the carrot aquires glasses with
                            the same colour as the carrots. Orange"
                            android:textSize="12dp"/>

                        <RatingBar
                            style="@android:style/Widget.Holo.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="5" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/article6"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:background="#45CBB2"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="35dp"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/article5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carrot only diet"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_margin="5dp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@mipmap/articleplaceholder"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="He who eats the carrot aquires glasses with
                            the same colour as the carrots. Orange"
                            android:textSize="12dp"/>

                        <RatingBar
                            style="@android:style/Widget.Holo.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="5" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>